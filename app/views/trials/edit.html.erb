<%= form_tag("/trials/#{@trial.id}", method: "patch") do %>
    <%=text_field_tag 'name', @trial.name ,placeholder: 'name' %>
    <%=text_field_tag 'title', @trial.title , placeholder:'title' %>
    <br>
    <br>
    <%=text_area_tag 'contents',@trial.contents, placeholder: 'contents' %>
    <%=submit_tag("수정하기") %>
<% end %>